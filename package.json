{
  "name": "pokemon-arena",
  "version": "0.0.1",
  "description": "",
  "homepage": "https://github.com/{{ org }}/pokemon-arena#readme",
  "bugs": {
    "url": "https://github.com/{{ org }}/pokemon-arena/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{ org }}/pokemon-arena.git"
  },
  "workspaces": ["client", "server"],
  "scripts": {
    "setup": "cd client && npm install && cd ../server && npm install",
    "build": "vite build",
    "type-check": "tsc --noEmit",
    "check": "biome check --error-on-warnings --no-errors-on-unmatched --staged . && npm run check-types --workspaces --if-present",
    "clean": "node ./bin/clean",
    "db:migrate": "npm run db:migrate --workspace=server",
    "db:seed": "npm run db:seed --workspace=server",
    "dev": "concurrently \"cd client && npm run dev\" \"cd server && npm run dev\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "prepare": "husky || true",
    "start": "cd server && npm start",
    "test": "npm run test --workspaces --if-present"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [],
  "author": "{{ org }}",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "concurrently": "^9.0.1",
    "husky": "^9.1.6",
    "validate-branch-name": "^1.3.1"
  }
}